@model InClassApp.Models.Entities.Student

@{
    ViewData["Title"] = "Add to Group";
}

<h1>Add to Group</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudent" asp-route-groupId="@ViewBag.GroupId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Index" class="control-label"></label>
                <select asp-for="Index" class ="form-control" asp-items="@ViewBag.Indecies"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="StudentsList" asp-route-id="@ViewBag.GroupId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
