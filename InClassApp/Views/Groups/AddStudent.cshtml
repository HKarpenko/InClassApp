@model InClassApp.Models.Entities.Student

@{
    ViewData["Title"] = "Add to Group";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/Group/group-add-student.css" />
}

<div>
    <a asp-action="StudentsList" asp-route-id="@ViewBag.GroupId" data-toggle="tooltip" data-placement="top" title="Back">
        <i class="bi bi-arrow-left-circle-fill back-action"></i>
    </a>
</div>

<h1>Add student to group</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudent" asp-route-groupId="@ViewBag.GroupId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-10">
                    <span class="form-group">
                        <label asp-for="Index" class="control-label student-index-label"></label>
                        <select asp-for="Index" class="form-control" asp-items="@ViewBag.Indecies"></select>
                    </span>
                </div>
                <div class="col-2">
                    <span>
                        <input type="submit" value="Add" class="btn btn-primary add-student-confirm" />
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
