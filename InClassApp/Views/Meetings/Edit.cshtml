@model InClassApp.Models.Entities.Meeting

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Meeting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MeetingStartDate" class="control-label"></label>
                <input asp-for="MeetingStartDate" class="form-control" />
                <span asp-validation-for="MeetingStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetingEndDate" class="control-label"></label>
                <input asp-for="MeetingEndDate" class="form-control" />
                <span asp-validation-for="MeetingEndDate" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Groups" asp-action="Details" asp-route-id="@ViewBag.GroupId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
