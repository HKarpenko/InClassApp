@model Domain.Models.Entities.Meeting

@{
    ViewData["Title"] = "Create";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/Meeting/meeting-add.css" />
}

<div>
    <a asp-controller="Groups" asp-action="Details" asp-route-id="@ViewBag.GroupId" data-toggle="tooltip" data-placement="top" title="Back">
        <i class="bi bi-arrow-left-circle-fill back-action"></i>
    </a>
</div>

<h1>Create meeting</h1>

<hr />
<div class="row">
    <div class="col-2"></div>
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MeetingStartDate" class="control-label meeting-add-label"></label>
                <input asp-for="MeetingStartDate" class="form-control" />
                <span asp-validation-for="MeetingStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeetingEndDate" class="control-label meeting-add-label"></label>
                <input asp-for="MeetingEndDate" class="form-control" />
                <span asp-validation-for="MeetingEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary float-right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
