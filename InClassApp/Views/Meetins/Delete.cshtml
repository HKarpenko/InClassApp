@model InClassApp.Models.Entities.Meeting

@{
    ViewData["Title"] = "Delete";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/Meeting/meeting-delete.css" />
}

<div>
    <a asp-controller="Groups" asp-action="Details" asp-route-id="@Model.GroupId" data-toggle="tooltip" data-placement="top" title="Back">
        <i class="bi bi-arrow-left-circle-fill back-action"></i>
    </a>
</div>

<h1>Delete meeting</h1>

<div class="row">
    <div class="col-8">
        <h3>Are you sure you want to delete this meeting?</h3>
    </div>
    <div class="col-2"></div>
    <span class="group-delete-btn">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </span>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetingEndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
    </dl>
</div>
