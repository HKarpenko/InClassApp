@model Domain.Models.Entities.PresenceRecord

@{
    ViewData["Title"] = "Edit";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/PresenceRecords/attendance-edit.css" />
}

<div>
    <a asp-controller="Meetings" asp-action="Details" asp-route-id="@Model.MeetingId" data-toggle="tooltip" data-placement="top" title="Back">
        <i class="bi bi-arrow-left-circle-fill back-action"></i>
    </a>
</div>

<form asp-action="Edit">
    <h1>Edit student attendance</h1>
    <br />
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <h4>
                    Is @Model.Student.User.UserName present?
                </h4>
                @Html.RadioButtonFor(model => model.Status, true)
                <span class="attendance-edit-status-label">Present</span>
                <br />
                @Html.RadioButtonFor(model => model.Status, false)
                <span class="attendance-edit-status-label">Absent</span>
                <br />
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-lg mt-3" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
